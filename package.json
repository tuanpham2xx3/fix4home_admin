{
  "name": "fix4home-admin-web",
  "version": "1.0.0",
  "type": "module",
  "description": "Fix4Home Admin Web - React Frontend for Article Management",
  "scripts": {
    "copy-tinymce": "node -e \"const fs=require('fs');const path=require('path');if(fs.existsSync('node_modules/tinymce')){fs.mkdirSync('public/tinymce',{recursive:true});const copy=(src,dest)=>{if(fs.statSync(src).isDirectory()){fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>copy(path.join(src,f),path.join(dest,f)));}else{fs.copyFileSync(src,dest);}};copy('node_modules/tinymce','public/tinymce');console.log('TinyMCE assets copied!');}\"",
    "dev": "npm run copy-tinymce && vite",
    "build": "npm run copy-tinymce && tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.2",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@tanstack/react-query": "^5.12.2",
    "@tinymce/tinymce-react": "^4.0.4",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.0",
    "tinymce": "^8.3.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
